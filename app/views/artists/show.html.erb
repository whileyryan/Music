
  <%= render 'artist' %>


  <% if user_signed_in? %>
    <h3>Write A Review</h3>
    <form class="form-horizontal" role="form" action="/artists/<%=params[:id]%>/reviews" method="post" data-remote = "true">
      <input type="hidden" value="<%=params[:id]%>" name="artist_id"/>
      <input type="hidden" value="<%=current_user.id%>" name="user_id"/>
      <div class="form-group">
        <div class="col-sm-10">
          <label>Venue:</label>
          <input type="text" class="form-control" name="venue">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <label>Content:</label>
          <textarea name="content" style="width: 100%"></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <label>Music Rating:</label>
          <input type="integer" class="form-control" name="music_rating">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <label>Atmosphere Rating:</label>
          <input type="integer" class="form-control" name="atmosphere_rating">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <label>Overall Rating:</label>
          <input type="integer" class="form-control" name="overall_rating">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <label>Event Date:</label>
          <input type="date" class="form-control" name="event_date">
        </div>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="repeat_experience"> Repeat?
        </label>
      </div>
      </br>
      <div class="form-group">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-default btn-lg">Create Review</button>
        </div>
      </div>
    </form>
  <% end %>
  <div class="reviews-container">
    <% if @reviews %>
      <h3>Reviews</h3>
      <% @reviews.each do |review| %>
        <%= render partial:'review', locals:{review:review} %>
      <% end %>
    <% end %>

  </div>
</div>

<!DOCTYPE html>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<html>
<head>

  <title>knowB4youGO</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>
    <div class='row'>
      <% if user_signed_in? %>
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"> </span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
           <form id="artist-search" class="navbar-form navbar-left" role="search" action="/search/show" method="post">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search" name="search_query">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </div>
    </nav>
    <% else %>

       <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"> </span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <%= button_to "Sign Up", new_user_registration_path, :class =>"btn btn-default", :method=> :get %>
        <%= button_to "Log in", new_user_session_path, :class =>"btn btn-default", :method=> :get %>
        <%= button_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class =>"btn btn-default", :method=> :get %>
         <form id="artist-search" class="navbar-form navbar-left" role="search" action="/search/show" method="post">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search" name="search_query">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>

    <% end %>

    </div>
    <%= yield %>
  </div>
</body>
</html>

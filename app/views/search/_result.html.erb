
<div class = 'artist_profile row artist_search'  data = <%=artist.mbid %> >



  <div class="col-md-4">
    <img src = '<%=artist.search_image_url %>'/>
      <div class="follow-div" id="<%=artist.id%>">
        <% if follow?(artist) %>
        <%= button_to 'Following', {}, :disabled => true, :class => 'btn btn-default btn-lg following' %>
        <% else %>
        <%= button_to 'Follow', artists_follow_path(id: artist.id), remote: true, :method => :post, :class => 'btn btn-default btn-lg follow' %>
        <% end %>

      </div>
  </div>



    <div class ='nonimg col-md-8'>

      <div class = 'title'>
        <span class='titletext'><%= artist.name %></span>
      </div>


      <div class='row buttonlist'>
        <div class='stats'>
          <div class='reviewstats col-sm-4 col-sm-offset-4 col-centered btn-lg'>
            Reviews: <%= get_review_count(artist) %>
          </div>
        </div>
      </div>

      <div class ='row buttonlist'>
        <div class='overallrating col-sm-4 col-sm-offset-4 col-centered btn-lg'>
          Overall Score: <%= artist.overall_rating %>
        </div>
      </div>

      <div class = "row buttonlist">
        <div class ='col-sm-4 col-sm-offset-4 col-centered'>
          <!-- Button trigger modal -->
          <a href='/artists/<%= artist.id %>'><button type="button" class="btn btn-primary btn-lg centered createreview">
           Go to artist
          </button></a>
        </div>
      </div>

    </div>
</div>





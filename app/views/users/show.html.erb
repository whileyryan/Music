<div class='space'>
</div>
<div class='row'>
	<div class="col-md-3">
		<h4> <%= current_user.name %></h4>
		 <img src='<%= current_user.image %>'>
		 <div role="tabpanel">
		 	<ul class="nav nav-tabs" role="tablist">
		 		<li role="presentation" class="active"><a href="#following"aria-controls="following" role="tab" data-toggle="tab">Following </a>
		 		</li>
		 		<li role="presentation" id='about_tab'><a href="#about" aria-constrols="about" role="tab" data-toggle="tab">About</a>
		 		</li>
		 		<li role="presentation" id='edit_tab'><a href="#edit" aria-constrols="edit" role="tab" data-toggle="tab">Edit</a>
		 		</li>

		 	</ul>
		 	<div class="tab-content">
			    <div role="tabpanel" class="tab-pane fade in active" id="following">
		 			<%= render partial:'following' %>
			    </div>
			    <div role="tabpanel" class="tab-pane fade" id="about">
			    	<%= render partial:'about' %>
			    </div>
			    <div role="tabpanel" class="tab-pane fade" id="edit">
			    	<form class='form-horizontal' role='form' action="/users/about" method='post' data-remote = "true">
						<input type='text' class='form-control' name='about'>
						<button type="submit" class="btn btn-default btn-sm">Update About</button>
					</form>
			    </div>
  			</div>


		 </div>
	</div>
	<div class='col-md-6'>
		<h1>Recent Reviews</h1>
			<%= render partial:'reviews' %>
	</div>
	<div class='col-md-3'>
	<p>Showing concerts for <%= @zipcode %></p>
		<form class='form-horizontal' role='form' action="/users/<%= current_user.id %>" method='get'>
			<input type='text' class='form-control' name='current_location'>
			<button type="submit" class="btn btn-default btn-sm red" class='red'>Search New Zipcode</button>
		</form>
		<p> <% @concerts.each do |concert| %></p>
		  <p><%= concert[:artist] %></p>
		  <p><%= concert[:venue] %></p>
		  <p><%= concert[:date] %></p>
		  <p><a href= "<%= concert[:url] %>" target="_blank"> Ticket info</a></p>
		  <hr>
		<% end %>
	</div>
</div>